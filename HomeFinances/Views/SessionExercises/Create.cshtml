@model HomeFinances.Models.SessionExercise

@{
    ViewData["Title"] = "Dodaj Serię";
}

<h1>Dodaj Serię do Treningu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TrainingSessionId" class="control-label"></label>
                <select asp-for="TrainingSessionId" class="form-control" asp-items="ViewBag.TrainingSessionId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ExerciseTypeId" class="control-label"></label>
                <select asp-for="ExerciseTypeId" class="form-control" asp-items="ViewBag.ExerciseTypeId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Load" class="control-label"></label>
                <input asp-for="Load" class="form-control" />
                <span asp-validation-for="Load" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Series" class="control-label"></label>
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Repetitions" class="control-label"></label>
                <input asp-for="Repetitions" class="form-control" />
                <span asp-validation-for="Repetitions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}