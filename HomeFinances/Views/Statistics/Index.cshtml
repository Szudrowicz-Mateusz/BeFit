@model IEnumerable<HomeFinances.Controllers.ExerciseStatViewModel>

@{
    ViewData["Title"] = "Statystyki";
}

<h1>Twoje Statystyki</h1>
<p class="text-muted">Dane z ostatnich 4 tygodni</p>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Nazwa ćwiczenia</th>
            <th>Ile razy wykonywane</th>
            <th>Łączna liczba powtórzeń</th>
            <th>Średnie obciążenie (kg)</th>
            <th>Maksymalne obciążenie (kg)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.ExerciseName</strong></td>
                <td>@item.ExecutionCount</td>
                <td>@item.TotalReps</td>
                <td>@item.AvgLoad.ToString("F1")</td>
                <td>@item.MaxLoad</td>
            </tr>
        }
    </tbody>
</table>
@if (!Model.Any())
{
    <div class="alert alert-info">Brak danych treningowych z ostatnich 4 tygodni.</div>
}